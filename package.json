{
  "name": "localvault",
  "version": "2.0.0",
  "description": "A secure, local-first password manager.",
  "main": "main.js",
  "author": "Lucas Gerbasi",
  "scripts": {
    "start": "electron .",
    "clean": "rimraf dist",
    "dist": "npm run clean && electron-builder"
  },
  "license": "UNLICENSED",
  "dependencies": {
    "argon2": "^0.40.1"
  },
  "devDependencies": {
    "electron": "^29.1.5",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.lucasgerbasi.localvault",
    "productName": "LocalVault",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "vault.html",
      "style.css"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.jpg"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.jpg"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icon.jpg"
    }
  }
}